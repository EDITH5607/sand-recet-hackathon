{
	"manifest_version": 3,
	"name": "YouTube Pause + Toggle Extension",
	"version": "1.0",
	"description": "Pauses YouTube video and can be toggled on/off.",
	"permissions": ["scripting", "activeTab", "storage"],
	"action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["*://www.youtube.com/*"],
			"js": ["content.js"]
		}
	],
	"host_permissions": ["*://www.youtube.com/*"]
}
